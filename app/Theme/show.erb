<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @theme.nom %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Nom</div>
            <div class="itemValue"><%= @theme.nom %></div>
          </li>
      
          <% Mot.find(:all,:conditions => {:theme_id => @theme.object},:order => 'directeur').each do |mot| %>
            <li>
              <a href="<%= url_for :controller => :Mot, :action => :show, :id => mot.object %>">
                <%= mot.francais %>
              </a>
            </li>
          <% end %>
    </ul>
  </div>

</div>
